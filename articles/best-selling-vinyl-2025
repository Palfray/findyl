        function initials(artist) {
            return artist.split(' ').filter(w => /[a-zA-Z]/.test(w[0])).map(w => w[0].toUpperCase()).slice(0,2).join('');
        }

        async function loadArtwork(mbid, q) {
            // 1. Try the stored MBID first
            const directUrl = `https://coverartarchive.org/release-group/${mbid}/front-250`;
            try {
                const r = await fetch(directUrl);
                if (r.ok) return directUrl;
            } catch(e) {}

            // 2. Fall back to MusicBrainz search
            try {
                const url = `https://musicbrainz.org/ws/2/release-group/?query=${encodeURIComponent(q)}&fmt=json&limit=1`;
                const r = await fetch(url, { headers: { 'User-Agent': 'findyl/1.0 (https://findyl.co.uk)' }});
                const data = await r.json();
                const rgs = data['release-groups'];
                if (rgs && rgs[0]) {
                    return `https://coverartarchive.org/release-group/${rgs[0].id}/front-250`;
                }
            } catch(e) {}

            return null;
        }

        async function buildList() {
            const container = document.getElementById('recordList');

            for (let i = 0; i < albums.length; i++) {
                const a = albums[i];

                // Render card immediately
                const card = document.createElement('a');
                card.href = a.link;
                card.className = 'record-card';
                card.style.animationDelay = `${i * 35}ms`;
                card.innerHTML = `
                    <div class="record-num ${a.pos <= 3 ? 'top3' : ''}">${a.pos}</div>
                    <div class="album-placeholder" id="ph-${i}">${initials(a.artist)}</div>
                    <img class="album-art" id="img-${i}" alt="${a.artist} - ${a.title}"/>
                    <div style="flex:1;min-width:0">
                        <p style="font-size:0.9rem;color:#111827;margin:0;line-height:1.3">${a.title}</p>
                        <p style="font-size:0.78rem;color:#9CA3AF;margin:0.2rem 0 0">${a.artist}</p>
                    </div>
                    <span class="find-link">Find it →</span>
                `;
                container.appendChild(card);

                // Load artwork without blocking render
                (async (idx, album) => {
                    await new Promise(r => setTimeout(r, idx * 150)); // stagger requests
                    const artUrl = await loadArtwork(album.mbid, album.q);
                    if (artUrl) {
                        const img = document.getElementById(`img-${idx}`);
                        const ph = document.getElementById(`ph-${idx}`);
                        if (img && ph) {
                            img.src = artUrl;
                            img.onload = () => {
                                img.style.display = 'block';
                                ph.style.display = 'none';
                            };
                        }
                    }
                })(i, a);
            }
        }

        buildList();
    </script>
