{
  "crons": [
    {
      "path": "/api/refresh-feed",
      "schedule": "0 6 * * *"
    }
  ],
  "rewrites": [
    { "source": "/artist", "destination": "/artist.html" },
    { "source": "/album", "destination": "/album.html" },
    { "source": "/results", "destination": "/results.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/sales", "destination": "/sales.html" },
    { "source": "/local-stores", "destination": "/local-stores.html" },
    { "source": "/articles", "destination": "/articles.html" },
    { "source": "/articles/:slug", "destination": "/api/article-ssr?slug=:slug" },
    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/disclosure", "destination": "/disclosure.html" }
  ]
}
